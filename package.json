{
  "name": "@openapi-typescript-infra/plop",
  "version": "1.0.0",
  "description": "Project generator for @openapi-typescript-infra services",
  "type": "module",
  "exports": "./build/index.js",
  "author": "Max Metral <developers@pyralis.com>",
  "license": "MIT",
  "config": {
    "coconfig": "./coconfig.cjs"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "echo \"TODO: write tests\" && exit 0",
    "clean": "yarn dlx rimraf ./build",
    "lint": "eslint src",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "postinstall": "husky install && coconfig"
  },
  "bin": {
    "create-oti-service": "./build/index.js"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn eslint src --cache --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@openapi-typescript-infra/coconfig": "^3.0.1",
    "@types/configstore": "^6.0.0",
    "@types/handlebars-helpers": "^0.5.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.2.4",
    "@types/parse-git-config": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "coconfig": "^0.12.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.5.1",
  "dependencies": {
    "boxen": "^7.1.0",
    "configstore": "^6.0.0",
    "handlebars-helpers": "^0.10.0",
    "minimist": "^1.2.8",
    "parse-git-config": "^3.0.0",
    "plop": "^3.1.2",
    "plop-pack-git-init": "^0.3.1"
  }
}
